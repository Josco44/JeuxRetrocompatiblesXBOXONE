{% extends "::base.html.twig" %}
{% block title %}{{ parent() }} - Détail {% endblock %}

{% block body %}  

  <div class="row">
    <div class="col-lg-12">
      <div class="bs-component">
        <div class="panel panel-default">
          <div class="panel-heading"><h2>{{ sortieJeuVideo.jeuvideo.nom }}</h2></div>
          <div class="panel-body panel-height">
            <div class="row">
              <div class="col-md-4">
                <img src="{{ vich_uploader_asset(sortieJeuVideo, 'imageBigFile') }}" alt="{{ sortieJeuVideo.jeuVideo.nom }}" title="{{ sortieJeuVideo.jeuVideo.nom }}"/>
              </div>
              <div class="col-md-8">
                <p>{{ sortieJeuVideo.jeuVideo.description }}</p>
                <p></p>
                <div class="row">
                  <div class="col-md-3">
                    Editeur(s) :
                  </div>
                  <div class="col-md-9">
                    {% for tiersEdi in sortieJeuVideo.tiersEditeur %}
                      {% if not loop.first %}
                      ,&nbsp;
                      {% endif %}
                      <img src="{{ vich_uploader_asset(tiersEdi.nationalite, 'imageFile') }}" alt="{{ tiersEdi.nationalite.nom }}" title="{{ tiersEdi.nationalite.nom }}"/>  
                      {{ tiersEdi.nom }}
                    {% endfor %}  
                  </div>
                </div>    
                <div class="row">  
                  <div class="col-md-3">
                    Développeur(s) :
                  </div>
                  <div class="col-md-9">
                    {% for tiersDev in sortieJeuVideo.tiersDeveloppeur %}
                      {% if not loop.first %}
                      ,&nbsp;
                      {% endif %}
                      <img src="{{ vich_uploader_asset(tiersDev.nationalite, 'imageFile') }}" alt="{{ tiersDev.nationalite.nom }}" title="{{ tiersDev.nationalite.nom }}"/>  
                      {{ tiersDev.nom }}
                    {% endfor %}  
                  </div>  
                </div>  
                <div class="row">  
                  <div class="col-md-3">
                    Date sortie :
                  </div>
                  <div class="col-md-9">
                    {{ sortieJeuVideo.dateSortie|dateFormat }}
                  </div>  
                </div>
                <div class="row">  
                  <div class="col-md-3">
                    Date sortie Xbox One :
                  </div>
                  <div class="col-md-9">
                    {{ sortieJeuVideo.dateSortieRetroXboxOne|dateFormat }}
                  </div>  
                </div>
                <div class="row">  
                  <div class="col-md-3">
                    Genre(s) :
                  </div>
                  <div class="col-md-9">
                    {% for typeJeu in sortieJeuVideo.jeuVideo.typesJeu %}
                      {% if not loop.first %}
                      ,&nbsp;
                      {% endif %}  
                      {{ typeJeu.nom }}
                    {% endfor %}  
                  </div>  
                </div>
                <div class="row">  
                  <div class="col-md-3">
                    Theme(s) :
                  </div>
                  <div class="col-md-9">
                    {% for themeJeu in sortieJeuVideo.jeuVideo.themesJeu %}
                      {% if not loop.first %}
                      ,&nbsp;
                      {% endif %}  
                      {{ themeJeu.nom }}
                    {% endfor %}  
                  </div>  
                </div>
                <div class="row">  
                  <div class="col-md-3">
                    Mode(s) :
                  </div>
                  <div class="col-md-9">
                    {% for modeJeu in sortieJeuVideo.jeuVideo.modesJeu %}
                      {% if not loop.first %}
                      ,&nbsp;
                      {% endif %}  
                      {{ modeJeu.nom }}
                    {% endfor %}  
                  </div>  
                </div>
                <div class="row">  
                  <div class="col-md-3">
                    &nbsp;
                  </div>
                  <div class="col-md-9">
                    &nbsp;
                  </div>  
                </div>
                <div class="row">  
                  <div class="col-md-3">
                    Classification du jeu :
                  </div>
                  <div class="col-md-9">
                    <img src="{{ vich_uploader_asset(sortieJeuVideo.jeuVideo.agePegi, 'imageFile') }}" alt="{{ sortieJeuVideo.jeuVideo.agePegi }}" title="{{ sortieJeuVideo.jeuVideo.agePegi }}" />
                    {% for classificationPegi in sortieJeuVideo.jeuVideo.classificationsPegi %}
                      <img src="{{ vich_uploader_asset(classificationPegi, 'imageFile') }}" alt="{{ classificationPegi }}" title="{{ classificationPegi.description }}"/>
                    {% endfor %}
                  </div>  
                </div>
                <div class="row">  
                  <div class="col-md-3">
                    &nbsp;
                  </div>
                  <div class="col-md-9">
                    &nbsp;
                  </div>  
                </div>
                <div class="row">  
                  <div class="col-md-3">
                    Site Web :
                  </div>
                  <div class="col-md-9">
                     <a href="{{ sortieJeuVideo.jeuVideo.siteWeb }}">{{ sortieJeuVideo.jeuvideo.nom }}</a> 
                  </div>  
                </div>
                <div class="row">  
                  <div class="col-md-3">
                    Vendu en boite :
                  </div>
                  <div class="col-md-9">
                     {% if sortieJeuVideo.enBoite %}
                     Oui
                     {% else %}
                     Non 
                     {% endif %}
                  </div>  
                </div>
              </div>
            </div>  
          </div>
        </div>
      </div>
    </div>
  </div>

{% endblock %}	

