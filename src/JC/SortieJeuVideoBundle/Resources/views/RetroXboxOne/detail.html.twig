{% extends "::base.html.twig" %}
{% block title %}{{ parent() }} - Détail - {% endblock %}

{% block body %}  

  <div class="row">
    <div class="col-lg-12">
      <div class="bs-component">
        <div class="panel panel-default">
          <div class="panel-heading">{{ sortieJeuVideo.jeuvideo.nom }}</div>
          <div class="panel-body panel-height">
            <div class="row">
              <div class="col-md-4">
                <img src="{{ vich_uploader_asset(sortieJeuVideo, 'imageBigFile') }}" alt="{{ sortieJeuVideo.jeuvideo.nom }}" />
              </div>
              <div class="col-md-8">
                <p>{{ sortieJeuVideo.jeuvideo.description }}</p>
                <p></p>
                <div class="row">
                  <div class="col-md-2">
                    Editeur(s)     :
                  </div>
                  <div class="col-md-10">
                    {% for tiersEdi in sortieJeuVideo.tiersEditeur %}
                      {% if not loop.first %}
                      ,&nbsp;
                      {% endif %}  
                      {{ tiersEdi.nom }}
                    {% endfor %}  
                  </div>
                </div>    
                <div class="row">  
                  <div class="col-md-2">
                    Développeur(s) :
                  </div>
                  <div class="col-md-10">
                    {% for tiersDev in sortieJeuVideo.tiersDeveloppeur %}
                      {% if not loop.first %}
                      ,&nbsp;
                      {% endif %}  
                      {{ tiersDev.nom }}
                    {% endfor %}  
                  </div>  
                </div>  
                <div class="row">  
                  <div class="col-md-2">
                    Date sortie    :
                  </div>
                  <div class="col-md-10">
                    {{ sortieJeuVideo.dateSortie|dateFormat }}
                  </div>  
                </div>
              </div>
            </div>  
          </div>
        </div>
      </div>
    </div>
  </div>

{% endblock %}	

