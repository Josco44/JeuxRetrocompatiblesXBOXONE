{% extends "::base.html.twig" %}
{% block title %}{{ parent() }} - Accueil{% endblock %}
{% block body %}  

  <div class="row">
    <div class="col-lg-12">
      <div class="bs-component">
        <div class="panel panel-info">
          <div class="panel-heading">Ajoutés récemment</div>
          <div class="panel-body panel-height">
            <div class="row">
              {% for listLastExitGame in listLastExitGames %}
                <div class="col-sm-6 col-md-2">
                  <div class="thumbnail">
                    <img src="{{ vich_uploader_asset(listLastExitGame, 'imageFile') }}" alt="{{ listLastExitGame.jeuvideo.nom }}" />
                    <div class="caption">
                      <h6>{{ listLastExitGame.jeuvideo.nom }}</h6>
                      <button type="button" class="btn btn-xs btn-primary">80</button>
                      <p></p>
                      <p>
                        <a href="{{ path('jc_retroxboxone_detail', { 'id' : listLastExitGame.id }) }}" class="btn btn-info btn-block" role="button">
                          Détail
                        </a>
                      </p>
                    </div>
                  </div>
                </div>
              {% endfor %}  
            </div>  
          </div>
        </div>
      </div>
    </div>
  </div>

{% endblock %}