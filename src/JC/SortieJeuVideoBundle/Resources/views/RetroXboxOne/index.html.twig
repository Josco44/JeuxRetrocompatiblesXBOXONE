                <a href="{{ path('jc_retroxboxone_all') }}">Tous les jeux AAA</a> 
              </div>
            </div>
          </div>
          <div class="panel-body panel-height">
            {% set nombre = 0 %}
            {% for listLastTripleAGame in listLastTripleAGames %}
              {% set nombre = nombre + 1 %}
              {% if loop.index % 6 == 1 %}
              <div class="row">
              {% endif %}  
                <div class="col-sm-6 col-md-2">
                  <div class="thumbnail homepage">
                    <div class="caption">
                      {{ listLastTripleAGame.dateSortieRetroXboxOne|dateFormat }}
                    </div>
                    <a href="{{ path('jc_retroxboxone_detail', { 'id' : listLastTripleAGame.id }) }}">
                      <img src="{{ vich_uploader_asset(listLastTripleAGame, 'imageFile') }}" alt="{{ listLastTripleAGame.jeuvideo.nom }}" />
                    </a>
                    <div class="caption">
                      <a href="{{ path('jc_retroxboxone_detail', { 'id' : listLastTripleAGame.id }) }}">{{ listLastTripleAGame.jeuvideo.nom }}</a>
                    </div>
                  </div>
                </div>
              {% if loop.index % 6 == 0 %}  
              </div>
              {% endif %}
            {% endfor %} 
            {% if nombre % 6 != 0 %}  
            </div>
            {% endif %} 
          </div>
        </div>
      </div>
    </div>
  </div>

{% endblock %}