{% extends "::base.html.twig" %}
{% block title %}{{ parent() }} - Accueil{% endblock %}
{% block body %}  

  <div class="row">
    <div class="col-lg-12">
      <div class="bs-component">
        <div class="panel panel-default">
          <div class="panel-heading">
            <div class="row">
              <div class="col-md-6 text-left"><h5>Dernier jeux rétrocompatibles</h5></div>
              <div class="col-md-6 text-right">
                <a href="{{ path('jc_retroxboxone_all') }}">Tous les jeux</a> 
              </div>
            </div>
          </div>
          <div class="panel-body panel-height">
            {% set nombre = 0 %}
            {% for listLastExitGame in listLastExitGames %}
              {% set nombre = nombre + 1 %}
              {% if loop.index % 6 == 1 %}
              <div class="row">
              {% endif %}  
                <div class="col-sm-6 col-md-2">
                  <div class="thumbnail homepage">
                    <div class="caption">
                      {{ listLastExitGame.dateSortieRetroXboxOne|dateFormat }}
                    </div>
                    <a href="{{ path('jc_retroxboxone_detail', { 'id' : listLastExitGame.id }) }}">
                      <img src="{{ vich_uploader_asset(listLastExitGame, 'imageFile') }}" alt="{{ listLastExitGame.jeuvideo.nom }}" />
                    </a>
                    <div class="caption">
                      <a href="{{ path('jc_retroxboxone_detail', { 'id' : listLastExitGame.id }) }}">{{ listLastExitGame.jeuvideo.nom }}</a>
                    </div>
                  </div>
                </div>
              {% if loop.index % 6 == 0 %}  
              </div>
              {% endif %}
            {% endfor %} 
            {% if nombre % 6 != 0 %}  
            </div>
            {% endif %} 
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="bs-component">
        <div class="panel panel-default">
          <div class="panel-heading">
            <div class="row">
              <div class="col-md-6 text-left"><h5>Derniers jeux AAA rétrocompatibles</h5></div>
